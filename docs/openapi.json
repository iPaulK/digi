{
  "openapi": "3.0.1",
  "info": {
    "title": "Digi API v1",
    "version": "0.1.0"
  },
  "servers": [
    {
      "url": "https://localhost:8080/api/v1",
      "description": "Local server"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "Authentication routes"
    }
  ],
  "paths": {
    "/auth/login": {
      "$ref": "./resources/auth/login.json"
    },
    "/auth/registration": {
      "$ref": "./resources/auth/registration.json"
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}